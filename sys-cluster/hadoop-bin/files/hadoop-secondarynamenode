# $Header: $

# Source hadoop settings
. /etc/conf.d/hadoop

export HADOOP_CONF_DIR HADOOP_LOG_DIR YARN_LOG_DIR JAVA_HOME

depend() {
	use net
}

start() {
	ebegin "Starting Hadoop Secondary Namenode"
	start-stop-daemon --start --background --wait 100 --pidfile /run/${SVCNAME}.pid --make-pidfile --user hdfs --group hadoop --exec /usr/bin/hdfs -- secondarynamenode

	eend $?
}

stop() {
	ebegin "Stopping Hadoop Secondary Namenode"
	start-stop-daemon --stop --pidfile /run/${SVCNAME}.pid
	eend $?
}
